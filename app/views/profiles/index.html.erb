<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">First name</th>
      <th scope="col">Middle name</th>
      <th scope="col">Last name</th>
      <th scope="col">Position</th>
      <th colspan="3" scope="col">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.first_name %></td>
        <td><%= profile.middle_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.position %></td>
        <td><%= link_to profile do %><i class="far fa-eye"></i> <% end %></td>
        <td><%= link_to edit_profile_path(profile) do %><i class="far fa-edit"></i><% end %></td>
        <td>
          <%= link_to profile, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path, class: 'btn btn-outline-primary' %>
